    function accessStatus(id) {

        $.ajax({
            url: "/ChangeRequestStatus",
            type: "POST",
            data: {
                id: id,
                url: "@ViewData["url_id"]"
            },
            success: function (data) {
                console.log(data);
                location.reload();
            },
            error: function (xhr,status,error) {

            }
        });

    }

    </script>
